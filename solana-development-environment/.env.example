# Solana Development Environment Configuration
# Copy this file to .env and customize for your needs

# Solana Network Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Alternative networks:
# SOLANA_NETWORK=mainnet-beta
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# SOLANA_NETWORK=testnet
# SOLANA_RPC_URL=https://api.testnet.solana.com
# SOLANA_WS_URL=wss://api.testnet.solana.com

# SOLANA_NETWORK=localhost
# SOLANA_RPC_URL=http://127.0.0.1:8899
# SOLANA_WS_URL=ws://127.0.0.1:8900

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Node.js Environment
NODE_ENV=development
PORT=3000

# Rust Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# Anchor Configuration
ANCHOR_PROVIDER_URL=https://api.devnet.solana.com
ANCHOR_WALLET=/home/solana/.config/solana/id.json

# Development Tools
EDITOR=nano
TERM=xterm-256color

# LocalStack Configuration (for local AWS development)
LOCALSTACK_ENDPOINT=http://localstack:4566
USE_LOCALSTACK=false

# Database Configuration (if using PostgreSQL service)
DATABASE_URL=postgresql://developer:devpassword@postgres:5432/development
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=development
POSTGRES_USER=developer
POSTGRES_PASSWORD=devpassword

# Redis Configuration (if using Redis service)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Project-specific configurations
PROJECT_NAME=my-solana-project
KEYPAIR_PATH=/workspace/.keys/id.json

# Security Settings
CONTAINER_USER=solana
WORKSPACE_DIR=/workspace

# Development Flags
DEBUG=true
VERBOSE_LOGGING=false
AUTO_CONFIRM=false
